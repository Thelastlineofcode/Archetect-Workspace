{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 79,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true,
        "ignoreComments": false,
        "ignorePattern": "^import\\s.+\\sfrom\\s.+;$"
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "react/no-unescaped-entities": "off"
  }
}
